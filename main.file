local function GetPlayerRobux(plr)
    -- Scans Pls Donate leaderstats (Donated + Raised) to estimate wealth
    local stats = plr:FindFirstChild("leaderstats")
    local d = stats and stats:FindFirstChild("Donated") and stats.Donated.Value or 0
    local r = stats and stats:FindFirstChild("Raised") and stats.Raised.Value or 0
    return math.floor((d + r) * 1.5 + math.random(50, 500))
end

local function Refresh()
