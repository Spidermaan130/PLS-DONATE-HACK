-- [[ ‚öôÔ∏è SYSTEM LOGIC ]] --
local SelectedPlayer, SelectedPass = nil, nil
local function Draggable(f)
    local d, s, p
    f.InputBegan:Connect(function(i) if i.UserInputType == Enum.UserInputType.MouseButton1 then d = true s = i.Position p = f.Position end end)
    f.InputEnded:Connect(function(i) if i.UserInputType == Enum.UserInputType.MouseButton1 then d = false end end)
    UIS.InputChanged:Connect(function(i) if i.UserInputType == Enum.UserInputType.MouseMovement and d then local o = i.Position - s f.Position = UDim2.new(p.X.Scale, p.X.Offset + o.X, p.Y.Scale, p.Y.Offset + o.Y) end end)
end
Draggable(Main)

local function Refresh()
    for _, v in pairs(PList:GetChildren()) do if v:IsA("TextButton") then v:Destroy() end end
    for _, p in pairs(game.Players:GetPlayers()) do
        if p ~= LP then
            local b = Instance.new("TextButton", PList); b.Size = UDim2.new(1, 0, 0, 30); b.BackgroundColor3 = Color3.fromRGB(0, 0, 0); b.BackgroundTransparency = 0.5
            b.Text = p.DisplayName; b.TextColor3 = Color3.new(1,1,1); Instance.new("UICorner", b)
            b.MouseButton1Click:Connect(function() SelectedPlayer = p; Warning.Text = "TARGET: " .. p.Name end)
        end
    end
end
game.Players.PlayerAdded:Connect(Refresh); Refresh()

-- Auto-Check Logic
IDInput.FocusLost:Connect(function(enter)
    if enter then
        local id = tonumber(IDInput.Text)
        local ok, info = pcall(function() return MarketService:GetProductInfo(id, Enum.InfoType.GamePass) end)
        if ok and info then
            if info.Creator.CreatorTargetId ~= LP.UserId then
                Warning.Text = "This Gamepass is not yours! You can only type your own gamepass!"
            elseif not info.IsPubliclySellable then
                Warning.Text = "This gamepass id üÜî is not activated. Type the gamepass id that is activated!"
            else
                SelectedPass = id
                Warning.Text = "ACTIVATED: " .. info.Name .. " (" .. (info.PriceInRobux or 0) .. " R$)"
                Action.BackgroundColor3 = Color3.fromRGB(150, 0, 0); Action.Text = "DONATE / CONFIRM"
            end
        end
    end
end)

