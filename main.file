        if p ~= LP then
            local b = Instance.new("TextButton", PScroll)
            b.Size = UDim2.new(1, -10, 0, 40); b.BackgroundColor3 = Color3.fromRGB(40,40,40)
            b.Text = p.DisplayName; b.TextColor3 = Color3.new(1,1,1); b.Font = "GothamBold"
            Instance.new("UICorner", b)
            b.MouseButton1Click:Connect(function()
                SelectedPlayer = p
                TName.Text = "TARGET: " .. p.Name:upper()
                TWealth.Text = "CURRENT ROBUX: " .. GetPlayerRobux(p)
                TweenService:Create(b, TweenInfo.new(0.3), {BackgroundColor3 = Color3.fromRGB(150,0,0)}):Play()
            end)
        end
    end
end

